{
    "lang": "en-gb",
    "name": "Markdown note editor",
    "short_name": "MD NE",
    "description": "A simple Markdown note editor",
    "start_url": "/",
    "background_color": "#2f3d58",
    "theme_color": "#2f3d58",
    "orientation": "any",
    "display": "standalone",
    "icons": [
        {
            "src": "/icon.png",
            "sizes": "512x512"
        }
    ],
    "file_handlers": [
        {
            "action": "/openFile",
            "accept": {
                "text/*": [
                    ".md"
                ]
            }
        }
    ]
}